<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sfondo4"
    tools:context=".Negozio">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/moneteMassime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/monete_Massime"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:typeface="monospace"
            tools:ignore="MissingConstraints" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_dark_background"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            tools:ignore="UselessParent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="101dp"
            android:layout_height="76dp"
            android:src="@drawable/box1"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="87dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#db402c"
            android:onClick="primaImmagine"
            android:text="COMPRA PER 25 MONETE"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="188dp" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:src="@drawable/box2"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="271dp"
            tools:layout_editor_absoluteY="87dp" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#db402c"
            android:onClick="secondaImmagine"
            android:text="COMPRA PER 50 MONETE"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="274dp"
            tools:layout_editor_absoluteY="188dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="101dp"
            android:layout_height="74dp"
            android:src="@drawable/boxocchio"
            tools:ignore="ContentDescription,MissingConstraints"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="87dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#db402c"
            android:onClick="terzaImmagine"
            android:text="COMPRA PER 100 MONETE"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="79dp"
            tools:layout_editor_absoluteY="188dp" />

            <ImageView
                android:id="@+id/gucci"
                android:layout_width="101dp"
                android:layout_height="74dp"
                android:src="@drawable/guccibanana"
                tools:ignore="ContentDescription,MissingConstraints"
                tools:layout_editor_absoluteX="271dp"
                tools:layout_editor_absoluteY="87dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#db402c"
                android:onClick="gucciImmagine"
                android:text="COMPRA PER 1000 MONETE"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="274dp"
                tools:layout_editor_absoluteY="188dp" />


            <Button
                android:id="@+id/personalizza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#db402c"
                android:onClick="personalizza"
                android:text="PERSONALIZZA"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="274dp"
                tools:layout_editor_absoluteY="188dp" />
        </TableLayout>



    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>